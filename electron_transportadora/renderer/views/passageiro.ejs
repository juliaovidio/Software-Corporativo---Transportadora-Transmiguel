<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" href="../css/passageiro.css">
  <title>Passageiros</title>
</head>
<body>

  <!-- Menu lateral -->
  <%- include('partials/menu_lateral') %>

  <div class="main-content">
    <div class="header-pass">
      <h1>Lista de Passageiros</h1>
      <a href="/passageiro/adicionar" class="btn-cadastrar">Cadastrar Novo Passageiro</a>
    </div>

    <!-- Barra de pesquisa -->
    <form action="/passageiro" method="GET" class="search-form">
      <input type="text" name="q" placeholder="Pesquisar passageiro..." value="<%= typeof q !== 'undefined' ? q : '' %>">
      <button type="submit">Buscar</button>
    </form>

    <!-- Lista de passageiros -->
    <div class="clientes-container">
      <% if (clientes && clientes.length > 0) { %>
        <% clientes.forEach(cliente => { %>
          <div class="cliente-card">
            <p><strong>Nome:</strong> <%= cliente.nome %></p>
            <p><strong>Telefone:</strong> <%= cliente.telefone %></p>
            <p><strong>Email:</strong> <%= cliente.email %></p>
            <p><strong>Endereço:</strong> <%= cliente.endereco %></p>
            <p><strong>Bairro:</strong> <%= cliente.bairro %></p>
            <p><strong>Cidade:</strong> <%= cliente.cidade %></p>
            <p><strong>Tipo:</strong> <%= cliente.tipo %></p>
            <p><strong>CPF:</strong> <%= cliente.cpf %></p>
            <p><strong>CNPJ:</strong> <%= cliente.cnpj %></p>
            <p><strong>Valor Mensal:</strong> R$ <%= cliente.valor_mensal %></p>
            <p><strong>Status:</strong> <%= cliente.status %></p>

            <div class="acoes">
              <a href="/passageiro/editar/<%= cliente.idPassageiro %>" class="btn-editar">Editar</a>

              <!-- Botão Excluir -->
              <form 
                action="/passageiro/<%= cliente.idPassageiro %>/delete"
                method="POST"
                style="display:inline;">
                <button
                  type="submit"
                  class="btn-excluir"
                  onclick="return confirm('Tem certeza que deseja deletar este passageiro?');">
                  Excluir
                </button>
              </form>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <p>Nenhum passageiro encontrado.</p>
      <% } %>
    </div>
  </div>

</body>
</html>
